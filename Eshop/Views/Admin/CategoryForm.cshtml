@using Eshop.Models;
@model CategoryFormModel

@if (TempData["Status"] != null)
{
    <div class="alert alert-@TempData["MessageType"] mt-2">
        @TempData["Status"]
        @{
            TempData["Status"] = null;
        }
    </div>
}

<form asp-action="@ViewData["Action"]Category" class="shadow p-4 rounded bg-light">
    <h3 class="text-center mb-4">@((ViewData["Action"]?.ToString() == "Edit" ? "✏️ Upravit kategorii" : "➕ Přidat kategorii"))</h3>

    <input type="hidden" asp-for="Id">

    <div class="mb-3 row">
        <label asp-for="Name" class="col-sm-2 col-form-label fw-bold">Název</label>
        <div class="col-sm-10">
            <input asp-for="Name" required class="form-control">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>

    <div class="mb-3 row">
        <label asp-for="Description" class="col-sm-2 col-form-label fw-bold">Popis</label>
        <div class="col-sm-10">
            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>


    <div class="text-center mt-4">
        <button type="submit" class="btn btn-success">
            <i class="fas fa-save"></i> Uložit
        </button>
        <a class="btn btn-danger" asp-controller="Admin" asp-action="Categories">
            <i class="fas fa-times"></i> Zpět na seznam
        </a>
    </div>
</form>



<!-- Bootstrap & FontAwesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
