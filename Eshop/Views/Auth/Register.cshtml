@{
}
<h1 class="text-center my-4">Registrace</h1>

<div class="d-flex justify-content-center">
    <form asp-action="Login" class="card p-4 shadow-sm" style="width: 350px;">
        <div class="mb-3">
            <label asp-for="Name" class="form-label fw-bold">Vaše jméno:</label>
            <input asp-for="Name" class="form-control" placeholder="Jméno..." required />
        </div>

        <div class="mb-3">
            <label asp-for="Lastname" class="form-label fw-bold">Vaše příjmení:</label>
            <input asp-for="Lastname" class="form-control" placeholder="Příjmení..." required />
        </div>

        <div class="mb-3">
            <label asp-for="Adress" class="form-label fw-bold">Vaše adresa:</label>
            <input asp-for="Adress" class="form-control" placeholder="Adresa..." required />
            <span asp-validation-for="Adress" class="text-danger"></span>
        </div>

        

        <div class="mb-3">
            <label asp-for="Password" class="form-label fw-bold">Vaše heslo:</label>
            <input asp-for="Password" type="password" class="form-control" placeholder="••••••" required />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="PasswordRepeat" class="form-label fw-bold">Heslo znovu:</label>
            <input asp-for="PasswordRepeat" type="password" class="form-control" placeholder="••••••" required />
        </div>
        <button type="submit" class="btn btn-primary w-100">Registrovat se</button>

        <div class="text-center mt-3">
            <a asp-action="Login" class="text-decoration-none">Máte účet? Přihlašte se</a>
        </div>
    </form>
</div>